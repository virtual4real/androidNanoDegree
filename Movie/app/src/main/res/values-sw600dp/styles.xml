<resources>

    <style name="DetailCollapsingToolbar">
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="layout_scrollFlags">scroll</item>
    </style>


    <style name="ReviewImage">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

</resources>